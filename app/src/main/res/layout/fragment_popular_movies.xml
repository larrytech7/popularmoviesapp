<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoviesFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:id="@+id/mainlinearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:useDefaultMargins="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchTextview"
        android:layout_row="15"
        android:layout_column="5"
        android:editable="true"
        android:focusable="true"
        android:hint="@string/searchtext"
        android:lines="1"
        android:enabled="true"
        android:focusableInTouchMode="true"
        android:singleLine="true"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:clickable="true" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/moviesGridView"
        android:layout_row="16"
        android:layout_column="5"
        android:numColumns="auto_fit"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:layout_rowWeight="1"
        android:background="#ddd"
        android:fastScrollEnabled="true"
        android:verticalSpacing="1dp"
        android:columnWidth="0dp"
        android:textFilterEnabled="false"
        android:horizontalSpacing="0dp" />
</LinearLayout>
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="true"
        fab:menu_fab_size="normal"
        fab:menu_showShadow="true"
        fab:menu_shadowColor="#66000000"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="3dp"
        fab:menu_colorNormal="#DA4336"
        fab:menu_colorPressed="#1E88E5"
        fab:menu_colorRipple="#99ddFF"
        fab:menu_animationDelayPerItem="50"
        fab:menu_icon="@android:drawable/ic_menu_sort_by_size"
        fab:menu_labels_textColor="#1E88E5"
        fab:menu_labels_textSize="14sp"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_colorNormal="#333333"
        fab:menu_labels_colorPressed="#444444"
        fab:menu_labels_colorRipple="#66FFFFFF"
        fab:menu_labels_position="left"
        fab:menu_openDirection="up"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_fab_label="Close" >

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabPopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="8dp"
            android:src="@android:drawable/ic_menu_myplaces"
            app:fab_colorNormal="#DA4336"
            app:fab_colorPressed="#E75043"
            app:fab_colorRipple="#9999FF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#eeeeee"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="normal"
            app:fab_label="Most Popular"
            app:fab_progress_color="#FF009688"
            app:fab_progress_backgroundColor="#4D000000"
            app:fab_progress_indeterminate="true"
            app:fab_progress_max="100"
            app:fab_progress="0"
            app:fab_progress_showBackground="false"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="8dp"
            android:src="@android:drawable/btn_star_big_on"
            app:fab_colorNormal="#DA4336"
            app:fab_colorPressed="#E75043"
            app:fab_colorRipple="#9999FF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#eeeeee"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="normal"
            app:fab_label="Favorites"
            app:fab_progress_color="#FF009688"
            app:fab_progress_backgroundColor="#4D000000"
            app:fab_progress_indeterminate="false"
            app:fab_progress_showBackground="false"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabHrated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginRight="8dp"
            android:src="@android:drawable/stat_notify_more"
            app:fab_colorNormal="#DA4336"
            app:fab_colorPressed="#E75043"
            app:fab_colorRipple="#9999FF"
            app:fab_showShadow="true"
            app:fab_shadowColor="#eeeeee"
            app:fab_shadowRadius="4dp"
            app:fab_shadowXOffset="1dp"
            app:fab_shadowYOffset="3dp"
            app:fab_size="normal"
            app:fab_label="Most Rated"
            app:fab_progress_color="#FF009688"
            app:fab_progress_backgroundColor="#4D000000"
            app:fab_progress_indeterminate="false"
            app:fab_progress_max="100"
            app:fab_progress="0"
            app:fab_progress_showBackground="false"/>

    </com.github.clans.fab.FloatingActionMenu>

</RelativeLayout>