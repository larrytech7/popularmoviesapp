<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    tools:context="nanodegree.android.com.popularmoviesapp.PopularMoviesActivity">

    <!-- Movies container for tablet UIs -->
    <fragment
        android:name="nanodegree.android.com.popularmoviesapp.fragments.MoviesFragment"
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:context="nanodegree.android.com.popularmoviesapp.DetailsActivity"
        tools:ignore="MergeRootFrame"
        tools:layout="@layout/fragment_popular_movies" />
    <!-- Details container -->
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"/>

</LinearLayout>